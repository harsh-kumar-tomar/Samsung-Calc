<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="Dimension" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>

        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>

        <item name="android:gravity">center</item>


        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
    </style>



    <style name="SideButtons" parent="Dimension">
        <item name="android:background">@drawable/button_circle_purple</item>

        <item name="fontFamily">@font/varela_font</item>
        <item name="android:textColor">#C99BD4</item>
        <item name="android:textSize">@dimen/_25sdp</item>

        <item name="android:onClick">buttonClicked</item>
    </style>

    <style name="ButtonStyle" parent="Dimension">

        <item name="android:background">@drawable/button_circle</item>

        <item name="fontFamily">@font/varela_font</item>
        <item name="android:textColor">#99aeda</item>
        <item name="android:textSize">@dimen/_25sdp</item>

        <item name="android:onClick">buttonClicked</item>
    </style>

    <style name="PurpleStyle" parent="Dimension">

        <item name="android:background">@drawable/button_circle_purple</item>

        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">#A2CAF5</item>
        <item name="android:textSize">@dimen/_28sdp</item>

        <item name="android:onClick">buttonClicked</item>
    </style>

</resources>