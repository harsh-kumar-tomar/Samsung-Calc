<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Javaappversion3" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="background">@drawable/button_circle</item>
    </style>

    <style name="Dimension" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>

        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>

        <item name="android:gravity">center</item>


        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="ButtonStyle" parent="Dimension">

        <item name="android:background">@drawable/button_circle</item>

        <item name="fontFamily">@font/varela_font</item>
        <item name="android:textColor">#99aeda</item>
        <item name="android:textSize">@dimen/_25sdp</item>

        <item name="android:onClick">buttonClicked</item>
    </style>

